<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".RegisterAndLogin.RegisterActivity">

    <com.example.commueoflove.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="20sp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:background="@drawable/edit_login"
                android:id="@+id/register_name"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:ems="14"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#CECECE"
                android:textSize="16sp"
                android:hint="请输入真实姓名"/>

            <EditText
                android:background="@drawable/edit_login"
                android:id="@+id/register_card"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:ems="14"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#CECECE"
                android:textSize="16sp"
                android:hint="请输入身份证号码"/>

            <EditText
                android:background="@drawable/edit_login"
                android:id="@+id/editText_phone_card_points"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:ems="14"
                android:inputType="phone"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#CECECE"
                android:textSize="16sp"
                android:hint="请输入手机号码"/>

            <EditText
                android:background="@drawable/edit_login"
                android:id="@+id/editText_msg_card_points"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:ems="14"
                android:inputType="number"
                android:textAlignment="center"
                android:textColorHint="#CECECE"
                android:textSize="16sp"
                android:hint="请输入短信验证码"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:id="@+id/button_msg_card_points"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#8B8B8B"
            android:textSize="18sp"
            />

        <Button
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/btu_shape1"
            android:id="@+id/button_next_card_points"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="注册"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"/>

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <View
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#508B8B8B"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/button_back_login_card_points"
                android:background="@null"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登 录"
                android:textColor="#8B8B8B"
                android:textSize="15sp"
                />
            <View
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#508B8B8B"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>