<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Mine.MineFragment">
    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:src="@drawable/photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="26sp"
                android:textStyle="bold"
                android:text="小刀" />

            <TextView
                android:id="@+id/account_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="177****8932" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:paddingBottom="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/open_upload_label"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/upload_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/img_upload" />

            <TextView
                android:id="@+id/upload_label"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:gravity="center_vertical|left"
                android:textColor="#232323"
                android:textSize="20sp"
                android:text="上传记录"/>

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:contentDescription="go"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/open_config_label"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/personal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/img_personal" />

            <TextView
                android:id="@+id/personal_label"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:gravity="center_vertical|left"
                android:textColor="#232323"
                android:textSize="20sp"
                android:text="个人信息修改" />

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:contentDescription="go"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/open_contact_label"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="8dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clause_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/contact" />

            <TextView
                android:id="@+id/clause_label"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:gravity="center_vertical|left"
                android:textColor="#232323"
                android:textSize="20sp"
                android:text="联系管理员" />

            <ImageView
                android:id="@+id/arrow5"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:contentDescription="go"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>