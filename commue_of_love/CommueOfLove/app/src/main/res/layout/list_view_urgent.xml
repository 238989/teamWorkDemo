<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/urgent_image"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        app:srcCompat="@drawable/img_urgent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="3"
        android:orientation="vertical">

       <!--标题-->
        <TextView
            android:id="@+id/urgent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="left"
            android:padding="1dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="#2c2c2c"
            android:text="疫情隔离急需生活物资" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <!--级别-->
            <TextView
                android:id="@+id/urgent_level"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_label_1"
                android:layout_gravity="center"
                android:padding="2dp"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="一级" />
            <!--类型-->
            <TextView
                android:id="@+id/urgent_class"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_label_1"
                android:layout_gravity="center"
                android:padding="2dp"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="物资" />
            <!--是否解决-->
            <TextView
                android:id="@+id/urgent_available"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_label_1"
                android:layout_gravity="center"
                android:padding="2dp"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="未解决" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
        <!--地区-->
            <TextView
                android:id="@+id/urgent_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#696969"
                android:text="成都" />
            <!--称呼-->
            <TextView
                android:id="@+id/urgent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="3dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#696969"
                android:text="张女士" />
        </LinearLayout>

        <TextView
            android:id="@+id/urgent_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="10dp"
            android:textSize="10sp"
            android:gravity="center"
            android:text="由于已经隔离了有3个月，所以物资缺乏，目前需要......" />

    </LinearLayout>

</LinearLayout>