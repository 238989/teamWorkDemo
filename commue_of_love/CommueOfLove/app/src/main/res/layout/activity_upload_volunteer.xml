<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyPublicBenfit.UploadVolunteerActivity">

    <!--导航-->
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/collection_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            app:srcCompat="@drawable/arrow_return" />

        <TextView
            android:id="@+id/hotel_title"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="志愿者招募"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:padding="8dp">
            <!--标题-->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="标题"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_volunteer_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_border_1"
                android:ems="10"
                android:hint="志愿项目主题"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textSize="14sp" />

            <!--组织人-->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="组织人"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_volunteer_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_border_1"
                android:ems="10"
                android:hint="组织名字或组织人姓名"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textSize="14sp" />

            <!--联系电话-->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="联系电话"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_volunteer_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_border_1"
                android:ems="10"
                android:hint="组织联系方式"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textSize="14sp" />

            <!--所在地区-->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="所在地区"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/upload_volunteer_location"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_border_1"
                android:gravity="left"
                android:hint="点击选择城市"
                android:padding="8dp"
                android:textSize="14sp" />


            <!-- 详细地址-->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="详细地址"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_volunteer_address"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_border_1"
                android:ems="10"
                android:hint="街道、小区楼栋/乡村名称"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textSize="14sp" />


            <!-- 招募类别-->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="招募类别"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_weight="10"
                android:background="@drawable/input_border_1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/upload_volunteer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:entries="@array/volunteerDurationArray"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/down_arrow_2"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arrow_down" />
            </LinearLayout>

            <!-- 志愿内容-->
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="志愿内容"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_volunteer_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_border_1"
                android:ems="10"
                android:gravity="left"
                android:hint="简洁、全面地描述志愿工作情况"
                android:padding="5dp"
                android:textSize="14sp" />

            <!-- 备注-->
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="备注"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_urgent_note"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/input_border_1"
                android:ems="10"
                android:gravity="left"
                android:hint="补充内容"
                android:padding="5dp"
                android:textSize="14sp" />

            <!--上传图片-->
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="上传图片"
                android:textColor="#e27a5f"
                android:textSize="16sp" />

            <!--图片上传显示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/open_camera_1"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/add_picture" />

                <ImageView
                    android:id="@+id/open_camera_2"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/add_picture" />

                <ImageView
                    android:id="@+id/open_camera_3"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/add_picture" />

            </LinearLayout>

            <Button
                android:id="@+id/commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btu_shape_commit"
                android:textColor="@color/white"
                android:text="提交" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>