<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".RegisterAndLogin.LoginActivity">

    <com.example.commueoflove.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="20sp"/>
    </FrameLayout>

    <!--输入文本-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:background="@drawable/edit_login"
            android:id="@+id/editText_account_card_points"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="14"
            android:inputType="phone"
            android:textAlignment="center"
            android:gravity="center"
            android:textColorHint="#CECECE"
            android:textSize="16sp"
            android:hint="请输入手机号码"/>

        <EditText
            android:background="@drawable/edit_login"
            android:id="@+id/editText_password_card_points"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="14"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:gravity="center"
            android:textColorHint="#CECECE"
            android:textSize="16sp"
            android:hint="请输入短信验证码"/>

    </LinearLayout>

    <Button
        android:layout_margin="5dp"
        android:background="@drawable/btu_shape1"
        android:layout_gravity="center"
        android:id="@+id/button_login_login"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:layout_width="250dp"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <View
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#508B8B8B"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/button_register_login"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注 册"
            android:textColor="#8B8B8B"
            android:textSize="15sp"
            />
        <View
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="#508B8B8B"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>